<div class="col-10">
    <%= render 'shared/errors' %>
</div>


<%= form_with(model: @taxpayer, local: true ) do |f| %>
    <div class="form-row">
        <div class="col-md-3 mb-3">
            <p> 
            <%= f.label 'IRD No' %>
            <%= f.text_field :ird_no,  style: 'display: block;'%>
            </p>
        </div>
        <div class="col-md-3 mb-3">
            <p> 
            <%= f.label 'Old IRD No' %>
            <%= f.text_field :old_ird_no,  style: 'display: block;' %>
            </p>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-3 mb-3">
            <p> 
            <%= f.label 'First Name' %>
            <%= f.text_field :first_name,  style: 'display: block;' %>
            </p>
        </div>
        <div class="col-md-3 mb-3">
            <p> 
            <%= f.label 'Middle Name' %>
            <%= f.text_field :middle_name,  style: 'display: block;' %>
            </p>
        </div>
        <div class="col-md-3 mb-3">
            <p> 
            <%= f.label 'Last Name' %>
            <%= f.text_field :last_name,  style: 'display: block;' %>
            </p>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-3 mb-3">
            <p> 
            <%= f.label 'Address' %>
            <%= f.text_field :address, style: 'display: block;' %>
            </p>
        </div>
    </div>
    
   <div class="form-row">
        <div class="col-md-3 mb-3">
            <p>
            <%= f.label 'Entity Type' %>
            <%= f.select :entity_type, ['Government', 'Private', 'Self-Employed'], style: 'display: block;'%>
            </p>
        </div>
    </div>
    <div class="form-row">
        <div class="col-md-3 mb-3">
            <p>
            <%= f.label 'Activity Status' %>
            <%= f.select :activity_status, ['Active', 'Inactive'], style: 'display: block;'%>
            </p>
        </div>
    </div>
    
    <p>
        <%= f.submit %>
    </p>

<% end %>
